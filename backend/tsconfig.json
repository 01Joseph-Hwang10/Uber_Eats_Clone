{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@users/*": ["./src/users/*"],
      "@restaurants/*": ["./src/restaurants/*"],
      "@auth/*": ["./src/auth/*"],
      "@jwt/*": ["./src/jwt/*"],
      "@common/*": ["./src/common/*"],
      "@src/*": ["./src/*"],
      "@mail/*": ["./src/mail/*"],
    }
  }
}
